<!-- Journey grid -->
<div class="card">
  <h3 class="text-lg font-semibold">Journey</h3>
  <div class="mt-4 grid grid-cols-18 gap-1">
    <!-- generate 18x10 squares -->
    <div id="journeyGrid" class="flex flex-wrap" style="max-width:100%"></div>
  </div>
</div>

  </div><script>
  // --- Simple data model and persistence ---
  const stateKey = 'jeeDashStateV1';
  const defaultState = {
    mastered:0, completed:0, inProgress:1, notStarted:82,
    modules:{math:2,phy:0,chem:0},
    journeyFilled:60,
    timer:{work:25,short:5,long:15,running:false,remaining:23*60+50},
    session:{running:false,startTs:null,logged:[]}
  };
  let state = JSON.parse(localStorage.getItem(stateKey)||'null') || defaultState;

  function save(){ localStorage.setItem(stateKey, JSON.stringify(state)); render(); }

  // --- render ---
  function render(){
    document.getElementById('overallPercent').innerText = computeOverall()+"%";
    document.getElementById('overallBar').style.width = computeOverall()+"%";
    document.getElementById('masteredCount').innerText = state.mastered;
    document.getElementById('completedCount').innerText = state.completed;
    document.getElementById('inprogressCount').innerText = state.inProgress;
    document.getElementById('notstartedCount').innerText = state.notStarted;

    document.getElementById('mathPercent').innerText = state.modules.math+"%";
    document.getElementById('mathBar').style.width = state.modules.math+"%";

    document.getElementById('phyPercent').innerText = state.modules.phy+"%";
    document.getElementById('phyBar').style.width = state.modules.phy+"%";

    document.getElementById('chemPercent').innerText = state.modules.chem+"%";
    document.getElementById('chemBar').style.width = state.modules.chem+"%";

    // journey grid
    const grid = document.getElementById('journeyGrid'); grid.innerHTML='';
    const total = 180; // 18x10
    for(let i=0;i<total;i++){
      const div=document.createElement('div'); div.className='grid-square';
      if(i < state.journeyFilled) div.classList.add('filled');
      div.title = (i<state.journeyFilled)? 'Done':'Not done';
      div.addEventListener('click',()=>{ if(i < state.journeyFilled) state.journeyFilled--; else state.journeyFilled++; save(); });
      grid.appendChild(div);
    }
  }

  function computeOverall(){
    // simple weighted overall
    const avg = Math.round((state.modules.math + state.modules.phy + state.modules.chem)/3);
    return Math.max(1, avg);
  }

  // --- controls ---
  document.getElementById('resetBtn').addEventListener('click', ()=>{ if(confirm('Reset progress?')){ state = JSON.parse(JSON.stringify(defaultState)); save(); }});
  document.getElementById('shareBtn').addEventListener('click', ()=>{ navigator.clipboard && navigator.clipboard.writeText('Progress: '+computeOverall()+'%'); alert('Progress copied to clipboard'); });

  // Timer (pomodoro simple)
  let timerInterval = null;
  function formatMS(s){ const mm = String(Math.floor(s/60)).padStart(2,'0'); const ss = String(s%60).padStart(2,'0'); return mm+':'+ss; }

  function startTimer(){ if(timerInterval) return; timerInterval = setInterval(()=>{
    if(state.timer.remaining>0){ state.timer.remaining--; document.getElementById('timerDisplay').innerText = formatMS(state.timer.remaining); }
    else { clearInterval(timerInterval); timerInterval=null; alert('Timer finished'); }
  },1000); }
  function resetTimer(){ state.timer.remaining = state.timer.work*60; save(); }
  document.getElementById('startTimer').addEventListener('click', ()=>{ startTimer(); });
  document.getElementById('resetTimer').addEventListener('click', ()=>{ resetTimer(); render(); });

  // Study session clock
  let sessionInterval = null;
  function tickSession(){ const now = Math.floor(Date.now()/1000); const elapsed = now - state.session.startTs; const h = String(Math.floor(elapsed/3600)).padStart(2,'0'); const m = String(Math.floor(elapsed%3600/60)).padStart(2,'0'); const s = String(elapsed%60).padStart(2,'0'); document.getElementById('sessionClock').innerText = h+":"+m+":"+s; }
  document.getElementById('startSession').addEventListener('click', ()=>{
    if(state.session.running) return; state.session.running=true; state.session.startTs = Math.floor(Date.now()/1000); sessionInterval = setInterval(tickSession,1000); save();
  });
  document.getElementById('logSession').addEventListener('click', ()=>{
    if(!state.session.running){ alert('Start session first'); return; }
    const now = Math.floor(Date.now()/1000); const elapsed = now - state.session.startTs; state.session.logged.push(elapsed); state.session.running=false; clearInterval(sessionInterval); sessionInterval=null; state.session.startTs=null; save(); updateLogText();
  });
  document.getElementById('resetSession').addEventListener('click', ()=>{ if(confirm('Reset sessions?')){ state.session.logged=[]; save(); updateLogText(); }});

  function updateLogText(){ if(state.session.logged.length===0) document.getElementById('todayLog').innerText = 'No sessions logged'; else document.getElementById('todayLog').innerText = state.session.logged.length+' sessions, total '+Math.round(state.session.logged.reduce((a,b)=>a+b,0)/60)+' min'; }

  // init
  if(state.timer.remaining===undefined) state.timer.remaining = state.timer.work*60;
  render(); updateLogText();

  // small autosave every 10s
  setInterval(()=>{ localStorage.setItem(stateKey, JSON.stringify(state)); },10000);

</script></body>
</html>
